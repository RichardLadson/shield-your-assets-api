{
  "name": "shield-your-assets-api",
  "version": "1.0.0",
  "description": "Backend for Medicaid Planning App",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RichardLadson/shield-your-assets-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RichardLadson/shield-your-assets-api/issues"
  },
  "homepage": "https://github.com/RichardLadson/shield-your-assets-api#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "html-pdf": "^3.0.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^14.1.0",
    "pg": "^8.16.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^7.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
